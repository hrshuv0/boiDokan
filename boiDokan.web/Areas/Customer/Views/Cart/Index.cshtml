@using boiDokan.entities.ViewModels
@model ShoppingCartVm

<form method="post">
    <br/>
    <div class="card">
        <div class="card-header bg-dark text-light ms-0">
            <div class="row">
                <div class="col-6 pt-2">
                    <i class="fa fa-shopping-cart"></i>&nbsp;Shopping Cart
                </div>
                <div class="col-6 text-end">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm">Continue shopping</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @foreach (var item in Model.CartList!)
            {
                <div class="row">
                    <div class="d-none d-lg-block col-lg-1 text-center py-2">
                        <img src="@item.Product!.ImageUrl" class="rounded" width="100%"/>
                    </div>
                    <div class="col-12 col-lg-6 pt-md-3">
                        <h5>
                            <strong>@item.Product.Title</strong>
                        </h5>
                        <p>
                            <small>@Html.Raw(item.Product!.Description)</small>
                        </p>
                    </div>
                    <div class="col-12 col-lg-5 text-center row">
                        <div class="col-4 text-md-end pt-4">
                            <h6>
                                <strong>@item.Price.ToString("c")<span class="text-muted">x</span>@item.Count</strong>
                            </h6>
                        </div>
                        <div class="col-6 col-sm-4 col-lg-6 pt-2">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-primary">
                                    <i class="bi bi-plus-square"></i>
                                </a>&nbsp;
                                <a asp-action="minus" asp-route-cartId="@item.Id"  class="btn btn-warning">
                                    <i class="bi bi-dash-square"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-2 col-sm-4 col-lg-2 text-end pt-2">
                            <a asp-action="remove" asp-route-cartId="@item.Id"  class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }

            <hr/>
            <div class="row">
                <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pe-4">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="text-info">Total</span>
                            <strong class="text-info">@Model.OrderHeader!.OrderTotal.ToString("c")</strong>
                        </li>
                    </ul>
                </div>
            </div>

        </div>

        <div class="card-footer">
            <div class="card-footer row">
                <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6">
                    <a asp-action="Summary" class="btn btn-success form-control">Summary</a>
                </div>
            </div>
        </div>
    </div>
</form>