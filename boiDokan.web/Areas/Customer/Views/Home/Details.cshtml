@using boiDokan.entities
@model ShoppingCart

@{
    ViewData["Title"] = @Model.Product!.Title + " - ";
}

<form method="post">
    <input hidden asp-for="ProductId"/>
    <div class="card container">
        <div class="card-header bg-primary text-light ms-0 row">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Product.Title</h1>
                <p class="text-warning">by @Model.Product.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-info pt-2" style="height: 30px; width: 80px">@Model.Product.CoverType!.Name</span>
                <span class="badge bg-warning pt-2" style="height: 30px; width: 80px">@Model.Product.Category!.Name</span>
            </div>
        </div>

        <div class="card-body row container">
            <div class="container rounded pt-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row ps-2">
                            <h5 class="text-muted">ISBN: @Model.Product.ISBN</h5>
                        </div>
                        <div class="row ps-2">
                            <h5 class="col-12 text-muted pb-2">
                                List Price: <strike>$@Model.Product.ListPrice</strike>
                            </h5>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>Quantity</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>1-15</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>51-100</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>100+</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2" style="color:maroon; font-weight: bold">
                            <div class="p-1 col-2 bg-secondary">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>$@Model.Product.Price</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>$@Model.Product.Price50</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>$@Model.Product.Price100</div>
                            </div>

                        </div>
                        <div class="row ps-2">
                            <div class="text-secondary">
                                <p>@Html.Raw(@Model.Product.Description)</p></div>
                        </div>
                        <div class="row ps-2">
                            <div class="col-2 col-sm-4 text-primary">
                                <h4>Count</h4>
                            </div>
                            <div class="col-10 col-sm-8">
                                <input asp-for="Count" class="form-control"/>
                            </div>
                        </div>

                    </div>
                    <div class="col-4 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Product.ImageUrl" width="100%" height="320px" class="rounded"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success form-control" style="height: 50px">Back to list</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height: 50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>